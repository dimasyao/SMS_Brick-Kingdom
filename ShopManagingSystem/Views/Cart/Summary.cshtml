@using SMS_Utility
@model SMS_Models.ViewModels.ProductUserVM

<h1>Summary</h1>

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">User Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="ApplicationUser.FullName" required class="form-control" />
                                        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="ApplicationUser.PhoneNumber" required class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="ApplicationUser.Email" required class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                @if (User.IsInRole(WebConstant.AdminRole))
                                {
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Street Adress</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="text" asp-for="ApplicationUser.StreetAdress" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.StreetAdress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>City</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="text" asp-for="ApplicationUser.City" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>State</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="text" asp-for="ApplicationUser.State" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Postal Code</label>
                                        </div>
                                        <div class="col-9">
                                            <input type="text" asp-for="ApplicationUser.PostalCode" class="form-control" />
                                            <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{ var orderTotal = 0f;}
                                        @for (int i = 0; i < Model.ProductList.Count(); i++)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <input type="hidden" asp-for="ProductList[i].Id" />
                                                <input type="hidden" asp-for="ProductList[i].Name" />
                                                <input type="hidden" asp-for="ProductList[i].Price" />
                                                <input type="hidden" asp-for="ProductList[i].TempCount" />
                                                <div>
                                                    <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                    @if (User.IsInRole(WebConstant.AdminRole))
                                                    {
                                                        <small class="text-muted">@Model.ProductList[i].TempCount</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">@Model.ProductList[i].Price.ToString("c", new System.Globalization.CultureInfo("en-US"))</small>
                                                    }
                                                </div>
                                                @if (User.IsInRole(WebConstant.AdminRole))
                                                {
                                                    <span class="text-muted">@((Model.ProductList[i].TempCount * Model.ProductList[i].Price).ToString("c", new System.Globalization.CultureInfo("en-US")))</span>
                                                }
                                            </li>
                                            orderTotal += (float)(Model.ProductList[i].TempCount * Model.ProductList[i].Price);
                                        }
                                        @if(User.IsInRole(WebConstant.AdminRole))
                                        {
                                            <li class="list-group-item d-flex justify-content-between bg-light">
                                            <small class="text-info"> Total (USD): </small>
                                                <strong class="text-info">@orderTotal.ToString("c", new System.Globalization.CultureInfo("en-US"))</strong>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            @if (User.IsInRole(WebConstant.AdminRole))
                            {
                                <button class="btn btn-success form-control" id="submit-button">Submit Order</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Submit Inquiry</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

